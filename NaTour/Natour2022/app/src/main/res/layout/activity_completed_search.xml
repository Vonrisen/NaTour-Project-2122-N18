<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cinamidea.natour.navigation.search.views.CompletedGeoSearchActivity">

    <ImageButton
        android:id="@+id/activityCompletedGeoSearch_backbutton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:elevation="10dp"
        app:srcCompat="@drawable/ic_back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/drawable_divider_line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activityCompletedGeoSearch_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>