<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.compilation.RoutesInCompilationActivity">

    <ProgressBar
        android:id="@+id/activityRoutesCompilation_progress"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/natour_green"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activityRoutesCompilation_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</RelativeLayout>