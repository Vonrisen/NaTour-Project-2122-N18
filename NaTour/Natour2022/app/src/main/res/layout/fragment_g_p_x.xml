<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".map.AddPathFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".map.GPXFragment" />


    <ImageButton
        android:id="@+id/activityMapGPX_plus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:background="@drawable/background_back_button"
        app:srcCompat="@drawable/ic_plus" />

    <ImageButton
        android:id="@+id/activityMapGPX_cancel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:visibility="gone"
        android:background="@drawable/background_back_button"
        app:srcCompat="@drawable/ic_cancel" />

    <ImageButton
        android:id="@+id/activityMapGPX_success"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/activityMapGPX_cancel"
        android:background="@drawable/background_back_button"
        app:srcCompat="@drawable/ic_success" />


</RelativeLayout>