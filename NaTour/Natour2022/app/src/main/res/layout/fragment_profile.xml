<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".navigation.ProfileFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragmentProfile_tablayout"
        android:layout_width="match_parent"
        app:tabRippleColor="@null"
        app:tabTextAppearance="@style/MyCustomTextAppearance"
        android:layout_height="80dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I miei sentieri"
            android:icon="@drawable/ic_myroads"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferiti"
            android:icon="@drawable/ic_preferredroads"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da visitare"
            android:icon="@drawable/ic_roadstovisit"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragmentProfile_viewpager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal" />

</LinearLayout>