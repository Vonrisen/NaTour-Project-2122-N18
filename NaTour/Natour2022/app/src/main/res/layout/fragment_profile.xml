<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cinamidea.natour.navigation.main.views.ProfileFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragmentProfile_tablayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:tabRippleColor="@null"
        app:tabTextAppearance="@style/MyCustomTextAppearance">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_myroads"
            android:text="@string/activityHome_myroutes" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_likedroutes"
            android:text="@string/activityHome_favorites" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_roadstovisit"
            android:text="@string/activityHome_tovisit" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragmentProfile_viewpager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal" />

</LinearLayout>