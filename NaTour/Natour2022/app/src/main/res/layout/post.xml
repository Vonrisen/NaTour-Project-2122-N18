<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@color/natour_green" />

                <TextView
                    android:id="@+id/post_username"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activityHome_username" />


            </LinearLayout>

            <ImageButton
                android:id="@+id/post_options"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_post_options" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sentiero degli dei"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/natour_black"/>

            <TextView
                android:id="@+id/post_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_home_filters"
                android:fontFamily="sans-serif"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="Easy"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/post_isreported"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_reported"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="4dp"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/natour_black"/>

            <TextView
                android:id="@+id/post_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_length"
                android:layout_marginStart="8dp"
                android:drawablePadding="4dp"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/natour_black"/>

            <ImageView
                android:id="@+id/post_handicap"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_length"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_handicap" />

        </LinearLayout>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/natour_white"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/post_favourite"
                    android:layout_width="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_height="48dp"
                    android:tag="0"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_like" />

                <ImageButton
                    android:id="@+id/post_map"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_openpostmap" />

                <ImageButton
                    android:id="@+id/post_chat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_send" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/post_collection"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_savedpaths" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_numberoffavourites"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:text="2"
                android:textStyle="bold"
                android:textColor="@color/natour_black"
                android:gravity="center"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text="@string/post_likes"
                android:textStyle="bold"
                android:textColor="@color/natour_black"
                android:gravity="center"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent ornare, metus et accumsan iaculis."
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/natour_black"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>