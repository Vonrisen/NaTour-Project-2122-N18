<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="4dp"
                    android:src="@color/natour_green"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/post_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activityHome_username"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/post_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sentiero degli dei"
                            android:textColor="@color/natour_black"/>

                        <TextView
                            android:id="@+id/post_difficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_home_filters"
                            android:fontFamily="sans-serif"
                            android:paddingHorizontal="16dp"
                            android:gravity="center"
                            android:text="Easy"
                            android:layout_marginStart="16dp"
                            android:stateListAnimator="@null"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/post_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_clock"
                            android:drawablePadding="4dp"
                            android:text="2h45m"
                            android:textSize="10sp"
                            android:textColor="@color/natour_black"/>

                        <TextView
                            android:id="@+id/post_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_length"
                            android:layout_marginStart="8dp"
                            android:drawablePadding="4dp"
                            android:text="6,5 km"
                            android:textSize="10sp"
                            android:textColor="@color/natour_black"/>

                        <ImageView
                            android:id="@+id/post_handicap"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_length"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_handicap" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/post_options"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_post_options" />

        </RelativeLayout>

        <TextView
            android:id="@+id/post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent ornare, metus et accumsan iaculis."
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/natour_black"
            />

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/natour_white"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/post_like"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_like" />

                <ImageButton
                    android:id="@+id/post_favourite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_favourite" />

                <ImageButton
                    android:id="@+id/post_tovisit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_add_tovisit" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/post_collection"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_savedpaths" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>