<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/activityHome_welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_light"
        android:text="Welcome back,"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activityHome_usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Umberto"
        android:textColor="#373737"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityHome_welcomeText" />

    <TextView
        android:id="@+id/activityHome_titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Near paths"
        android:textColor="#373737"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityHome_usernameText" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activityHome_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:src="#AAE49C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/activityHome_usernameText"
        app:layout_constraintTop_toTopOf="parent" />

    <com.eldersoss.elderssearchview.EldersSearchView
        android:id="@+id/activityHome_searchbar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:esvBackground="@drawable/searchbar_custom"
        app:esvElevation="0dp"
        app:esvHintText="Search your path"
        app:esvSearchViewHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityHome_titleText"
        app:esvSuggestionsEnabled="false" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/activityHome_searchbar"
        android:scrollbarThumbHorizontal="@null"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/button_filter_home"
                android:fontFamily="@font/roboto_regular"
                android:text="All"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:fontFamily="@font/roboto_regular"
                android:text="Easy"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="#C4C4C4"
                android:textSize="18sp" />

            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:fontFamily="@font/roboto_regular"
                android:text="Moderate"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="#C4C4C4"
                android:textSize="18sp" />

            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:fontFamily="@font/roboto_regular"
                android:text="Difficult"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textColor="#C4C4C4"
                android:textSize="18sp" />

            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:fontFamily="@font/roboto_regular"
                android:text="Extreme"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="#C4C4C4"
                android:textSize="18sp" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>