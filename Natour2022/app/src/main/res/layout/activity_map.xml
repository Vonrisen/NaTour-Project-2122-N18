<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/activityMap_backbutton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="10dp"
            android:background="@drawable/background_back_button"
            app:srcCompat="@drawable/ic_back" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <android.widget.Button
            android:id="@+id/activityMap_addpath"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="75dp"
            android:paddingTop="12dp"
            android:text="Inserisci sentiero"
            android:background="#00000000"
            android:textSize="13sp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:drawablePadding="-8dp"
            android:drawableTop="@drawable/ic_add_road" />

        <android.widget.Button
            android:id="@+id/activityMap_allpaths"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:text="Visualizza sentieri"
            android:stateListAnimator="@null"
            android:background="#00000000"
            android:textSize="13sp"
            android:drawablePadding="-8dp"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_globe_active" />

        <android.widget.Button
            android:id="@+id/activityMap_importgpx"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:stateListAnimator="@null"
            android:text="Importa GPX"
            android:background="#00000000"
            android:textSize="13sp"
            android:drawablePadding="-8dp"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_file" />

    </LinearLayout>


</LinearLayout>
