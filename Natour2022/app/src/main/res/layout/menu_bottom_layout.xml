<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuLayout_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile_menu">

    <View
        android:layout_width="64dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:background="@drawable/drawable_rounded_line"/>

    <android.widget.Button
        android:id="@+id/menuLayout_savedPaths"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_savedpaths"
        android:drawablePadding="16dp"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="16dp"
        android:stateListAnimator="@null"
        android:text="Raccolta sentieri"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginHorizontal="32dp" />

    <android.widget.Button
        android:id="@+id/menuLayout_editPhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_editphoto"
        android:drawablePadding="16dp"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="16dp"
        android:stateListAnimator="@null"
        android:text="Modifica foto profilo"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginHorizontal="32dp" />

    <android.widget.Button
        android:id="@+id/menuLayout_changePassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="16dp"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="16dp"
        android:stateListAnimator="@null"
        android:text="Cambia password"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginHorizontal="32dp" />

    <android.widget.Button
        android:id="@+id/menuLayout_logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="16dp"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="16dp"
        android:stateListAnimator="@null"
        android:text="Disconnetti"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginHorizontal="32dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="@color/white"/>

</LinearLayout>